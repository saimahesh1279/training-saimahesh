<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="com.pojo.Student" table="student">
<id name="sid" column="stdid"></id>
<property name="sname" column="stdname"></property>
<property name="semail" column="semail"></property>
<property name="spassword" column="spassword"></property>
<property name="presentyr" column="presentyr"></property>
<property name="department" column="department"></property>
<property name="mobileno" column="mobile"></property>
<property name="address" column="address"></property>
</class>

</hibernate-mapping>